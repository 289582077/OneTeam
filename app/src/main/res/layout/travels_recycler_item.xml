<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="5dp">
        <ImageView
            android:id="@+id/travels_recycler_item_activity_photo_url"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/travels_recycler_item_activity_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="@string/text_default"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/travels_from_1"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/travels_recycler_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/text_default"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/travels_recycler_item_name_color"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:text="@string/travels_from_2"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="10dp">
            <Button
                android:id="@+id/travels_recycler_item_follow"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/travels_follow_shape"
                android:text="@string/text_default"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/travels_recycler_item_activity_contents_photo_url_one"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:id="@+id/travels_recycler_item_activity_contents_photo_url_others"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:id="@+id/travels_recycler_item_activity_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:text="@string/text_default"/>
    <TextView
        android:id="@+id/travels_recycler_item_activity_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:text="@string/text_default"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/travels_recycler_item_read_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:textColor="@color/travels_recycler_item_name_color"
            android:text="@string/text_read_all"/>
        <TextView
            android:id="@+id/travels_recycler_item_activity_districts_to_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:textColor="@color/travels_recycler_item_name_color"
            android:text="@string/text_default"/>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:id="@+id/travels_recycler_item_activity_poi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/travels_recycler_item_activity_likes_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@drawable/travels_like_selector"
            android:gravity="center"

            android:layout_height="match_parent" />
        <CheckBox
            android:id="@+id/travels_recycler_item_activity_comments_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@drawable/travels_like_selector"
            android:gravity="center"
            android:layout_height="match_parent" />
        <CheckBox
            android:id="@+id/travels_recycler_item_activity_favorites_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@drawable/travels_like_selector"
            android:gravity="center"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/travels_recycler_item_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:drawableRight="@drawable/travels_more_selector"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>